/* pages/myRecyclingList/myRecyclingList.wxss */

.Vtu_Empty_Center_Src{
  margin: 200px auto 20px auto;
}

#tabs{
  font-size: 14px;
}
.tabs-box{
    display:flex;
    align-items:center;
    justify-content:center;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center
}
.tabs-item.selected {
    color:rgb(25, 137, 250);
    border-bottom:5rpx solid rgb(25, 137, 250);
}
.tabs-item {
    width: 33.3%;
    color:var(--font-hb);
    border-bottom:5rpx solid #e9e9e9;
}


.goods-info{
  display: flex;
  padding: 10px;
  background-color: #fff;
  margin-bottom: 10px;
}

.goods-info image {
  width: 110px;
}

.vtu-shopList-image{
  margin-right: 10px;
}

.vtu-shopList-label{
  padding-bottom: 5px;
}

.vtu-shopList-label span {
  border-radius: 5px;
  padding: 0px 4px;
  margin: 0px 5px 0 0;
}

.bg-red {
  background: var(--red) !important;
  color: #fff !important;
  font-size: 12px;
}

.btn-red{
  color: #fff;
  background: orange;
  padding: 5px 10px;
  float: right;
}

.font-ziti{
  color: #888;
  font-size: 13px;
  margin-bottom: 3px;
}

.price{
  font-size: 14px;
  font-weight: bold;
}